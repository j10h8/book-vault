@using book_vault.Models;

@if (BookModel != null)
{
	<div style="display:flex; justify-content:space-between; margin-top:1rem;">
		<div style="display:flex; flex-direction:column; justify-items:center;">
			<h4 style="margin:0">@BookModel.Title</h4>
			<p style="margin:0">Written by @BookModel.Author</p>
		</div>
		<div style="display:flex; align-items:center;">
			<i @onclick="ToggleUpdateBookModal" class="fa-solid fa-pencil" style="color: #daa520; margin-right:1rem; cursor:pointer;"></i>
			<i @onclick="ToggleRemoveBookModal" class="fa-regular fa-trash-can" style="color: #daa520; cursor:pointer;"></i>
		</div>
	</div>

	if (RemoveBookModalIsVisible)
	{
		<RemoveBookModal BookToRemove="BookModel" OnClose="ToggleRemoveBookModal" OnRemoveBookAsync="RemoveBookAsync" />
	}

	if (UpdateBookModalIsVisible)
	{
		<UpdateBookModal BookToUpdate="BookModel" OnClose="CloseUpdateModal" />
	}
}
